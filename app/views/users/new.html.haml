%h1 Sign up

= form_tag users_path do

  = label :user, :user_id, 'user_id'
  = text_field :user, 'user_id', :id => 'signup_user'

  = label :user, :email, 'email'
  = text_field :user, 'email', :id => 'signup_email'
  
  = submit_tag 'Create an account', :id => 'signup_create'
  
= link_to 'Login', login_path, :method => :get

